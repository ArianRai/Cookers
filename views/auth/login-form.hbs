<div class="container-fluid background-user p-layout">
	<div class="container">
		<div class="row justify-content-center">
			<div class="col-6 login-view">
					<div class="view_title_list">
						<h4>Login</h4>
						<hr>
					</div>
				<form action="login" method="POST">
					<div class="mb-3">
						<label for="emailInput" class="form-label">Email address</label>
						<input type="email" class="form-control" id="emailInput" name="email">
					</div>

					<div class="mb-3">
						<label for="pwdInput" class="form-label">Password</label>
						<input type="password" class="form-control" id="pwdInput" name="plainPassword">
					</div>

					<div class="d-grid gap-2 justify-content-center">
						<button type="submit" class="btn button-cyan block  px-4">Login</button>
					</div>

					{{#if errorMessage}}
					<div class="mt-3 p-3" id="error">
						{{errorMessage}}
					</div>
					{{/if}}
				</form>
			</div>
		</div>
	</div>
</div>