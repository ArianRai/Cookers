<div class="container-fluid background-recipes p-layout">

	<div class="container mb-5">
		<div class="row">
			<div class="col-3">
				<img src="{{recipe.image}}" alt="{{recipe.name}}">

				{{#if isFavorite}}
				<form action="/user/chefs-favorite/remove" method="POST">
					<input type="text" name="recipe_id" value="{{recipe.id}}" hidden>
					<input type="submit" class="btn btn-danger d-grid mt-4" value="Delete favorite">
				</form>
				{{else}}
				<form action="/user/chefs-favorite/add" method="POST">
					<input type="text" name="recipe_id" value="{{recipe.id}}" hidden>
					<input type="submit" class="btn btn-success d-grid mt-4" value="Add favorite">
				</form>
				{{/if}}
				<a href="/recipe/list" class="btn btn-dark mt-3">Search more recipes</a>
			</div>
			<div class="col">
				<div class="row flex-column">
					<h2>{{recipe.name}}</h2>
					<hr>
					<p><strong>Preparation time: </strong>{{recipe.totalTime}} min</p>
					<p>{{#each recipe.ingredients}}
						{{food}} |
						{{/each}}
					</p>
					<h4>Ingredients</h4>
					<div class="container">
						<ul>
							{{#each recipe.ingredientsLines}}
							<li>{{this}}</li>
							{{/each}}
						</ul>
					</div>
				</div>
			</div>
		</div>
		<div class="row">
			<form action="/review/create/{{recipe._id}}" method="POST">
				<label for="ratingInput">Rating</label>
				<input type="number" name="rating" id="ratingInput" min="0" max="10">
				<label for="commentInput">Review</label>
				<textarea name="comment" id="commentInput" cols="30" rows="3"></textarea>
				<input type="submit" value="Create Review">
			</form>
		</div>
		<div class="row my-3">
			<p>Reviews</p>
			<ul>
				{{#each reviews}}
				<li>
					<p>Rating: {{rating}}</p>
					<p> {{comment}} - {{owner.username}}</p>
				</li>
				{{/each}}
			</ul>
		</div>
	</div>
</div>