<div class="container-fluid background-recipes p-layout">
    <div class="container">
		<div class="row justify-content-center mb-5">
				<div class="col-12 list-view">
					<div class="view_title_list">
						<h4>Chefs recipes list</h4>
						<hr>
					</div>
				<ul class="list-group mt-3">
					{{#each recipes}}
					<li class="list-group-item pt-3 d-flex justify-content-between align-items-baseline bg-transparent text-white fs-5 border-0">
						<p>{{name}}</p>
						<div class="row me-2">
							<div class="col">
								<form action="recipe-chef-details" method="POST">
									<input type="text" name="id" value="{{id}}" hidden>
									<input type="submit" class="button-list-details border-0 fs-6 px-2" value="Details">
								</form>
							</div>
						</div>
					</li>
					{{/each}}
				</ul>
			</div>
		</div>
	</div>
</div>