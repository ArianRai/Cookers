<div class="container">

	<div class="row justify-content-center">

		<div class="col-md-6">

			<h1>Create new recipe</h1>
			<hr>
			<div>
				{{#if errorMsg}}
				<div class="mb-3 p-3" id="error">
					{{errorMsg}}
				</div>
				{{/if}}
			</div>
			<form action="/recipe/create" method="POST" class="needs-validation" enctype="multipart/form-data">
				<div class="mb-3">
					<label for="nameInput" class="form-label">Recipe name</label>
					<input type="text" class="form-control" id="nameInput" name="name" required>
				</div>

				<div class="mb-3">
					<label for="imgInput" class="form-label">Image</label>
					{{!-- <input type="text" class="form-control" id="imgInput" name="image" required> --}}
					<input type="file" id="imgInput" name="image" class="form-control-file" value=" "/>
				</div>
				<div class="content">
					<div class="row" id="ingredient-group">
						<div class="mb-3 col-4">
							<label for="ingredientInput" class="form-label">Ingredient</label>
							<input type="text" class="form-control" id="ingredientInput" name="food" required>
						</div>
						<div class="mb-3 col-4">
							<label for="quantityInput" class="form-label">Quantity</label>
							<input type="number" step="0.25" min="0" class="form-control" id="quantityInput"
								name="quantity" required>
						</div>
						<div class="col">
							<label for="measureInput" class="form-label">Measure</label>
							<select size="1" class="form-select" id="measureInput" name="measure" required>
								<option value="">Measure</option>
								{{#each measureTypes}}
								<option value="{{this}}">{{this}}</option>
								{{/each}}
							</select>
						</div>
					</div>
				</div>
				<input class="btn btn-dark me-2" type="button" id="addIngredient" value="Add ingredient">
				<input class="btn btn-danger" type="button" id="removeIngredient" value="Remove ingredient">
				<div class="row my-3">
					<div class="col">
						<label for="cuisineType" class="form-label">Cuisine Type</label>
						<select size="1" class="form-select" id="cuisineType" name="cuisineType">
							<option value="">Cuisine</option>
							{{#each cuisineTypes}}
							<option value="{{this}}">{{this}}</option>
							{{/each}}
						</select>
					</div>
					<div class="col">
						<label for="--" class="form-label">Meal Type</label>
						<select size="1" class="form-select" id="--" name="mealType">
							<option value="">Meal Type</option>
							{{#each mealTypes}}
							<option value="{{this}}">{{this}}</option>
							{{/each}}
						</select>
					</div>
					<div class="col">
						<label for="totalTimeInput" class="form-label">Total Time (min)</label>
						<input type="number" min="0" class="form-control" id="totalTimeInput" name="totalTime">
					</div>
				</div>
				<input class="mt-3 btn btn-success d-block" type="submit" value="Create recipe">
			</form>
		</div>
	</div>

</div>