<div class="container-fluid background-recipes p-layout">
	<div class="container-fluid view-recipes-margin">
		<div class="row">
			<div class="col-3">
				<img class="img_recipes_api" src="{{recipe.image}}" alt="{{recipe.label}}">
				{{#if isFavorite}}
				<form action="/user/favorite/remove" method="POST">
					<input type="text" name="recipe_uri" value="{{recipe.uri}}" hidden>
					<input type="submit" class="btn btn-danger d-grid mt-4" value="Delete favorite">
				</form>
				{{else}}
				<form action="/user/favorite/add" method="POST">
					<input type="text" name="recipe_uri" value="{{recipe.uri}}" hidden>
					<input type="submit" class="btn btn-success d-grid mt-4" value="Add favorite">
				</form>
				{{/if}}
				<a href="/recipe/list" class="btn btn-dark mt-3">Search more recipes</a>
			</div>
			<div class="col-8 recipes_view">
				<div class="row flex-column">
					<div class="view_title_list">
						<h4 class="view_title_list">{{recipe.label}}</h4>
						<hr>
					</div>
					<p><strong>Calories/serving: </strong>{{calories}}</p>
					<p><strong>Servings: </strong>{{recipe.yield}}</p>
					<p><strong>Preparation time: </strong>{{recipe.totalTime}} min</p>
					<p>{{#each recipe.ingredients}}
						{{food}} |
						{{/each}}
					</p>
					<h5 class="view_title_list">Ingredients</h5>
					<div class="container">
						<ul>
							{{#each recipe.ingredientLines}}
							<li>{{this}}</li>
							{{/each}}
						</ul>
					</div>
				</div>
			</div>
		</div>

	</div>
</div>