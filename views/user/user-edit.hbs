<div class="container-fluid background-user p-layout">
	<div class="container pt-5">
		<div class="row justify-content-center">
			<div class="col-md-6 login-view">
				<div class="view_title_list">
						<h4>Edit User</h4>
						<hr>
					</div>
				<form action="/user/edit/{{_id}}" method="POST" enctype="multipart/form-data">
					<div class="mb-3">
						<label for="username" class="form-label">Nombre de usuario</label>
						<input type="text" class="form-control" id="username" name="username" value="{{username}}">
					</div>
					<div class="mb-3">
						<label for="email" class="form-label">Email</label>
						<input type="email" class="form-control" id="email" name="email" value="{{email}}">
					</div>
					<div>
						<label> Change Avatar:
							<input type="file" id="avatar" name="avatar" class="form-control-file" value="{{avatar}}" />
						</label>
					</div>
					
					<input type="submit" class="btn button-cyan px-4 py-2 ml-button" value="Edit">
					
				</form>
			</div>
		</div>
	</div>
</div>